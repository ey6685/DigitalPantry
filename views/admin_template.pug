doctype html
html
	head
		style.
			.footer {
				position: fixed;
				left: 0;
				height:60px;
				bottom: 0;
				width: 100%;
				text-align: center;
				box-shadow: 0 50vh 0 50vh #343a40;
				background-color: #570573 !important;
				color: white !important;
			}
			.nav{
				padding-top: 50px;
				margin-bottom: 100px;
				margin: 0;
				padding: 0;
				width: 260px;
				background-color: #faf8eb !important;
				color: #570573 !important;
				border-color: #570573 !important;
				position: fixed;
				height: 100%;
				overflow: auto;
				box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
				display: block !important;
			}
			.nav a{
				display: block;
				color: #570573 !important;
				padding: 16px;
				text-decoration: none;
			}
			.nav link.active{
				background-color: #570573 !important;
				color: #faf8eb !important;
			}
			.nav-item:hover:not(.active){
				background-color: #91c02e !important;
				color: white !important;
			}
			main{
				margin-bottom:100px;
			}
			.nav-link{
				color:white;
			}
			hr{
				background-color:white;
				margin-bottom:0px !important;
				border-bottom:0px !important;
				padding-bottom:0px !important;
			}
			.nav-item{
				padding-right:8px;
				padding-left:8px;
				border-bottom:1px solid black;
				width: 100%;
			}
			.header{
				text-align:center;
				font-size:25px;

			}
			.btn-outline-danger {
				color: #d93711 !important;
			}
			.btn-outline-danger:hover {
				color: white !important;
			}
			i{
				padding-right: 8px;
				width:35px;
				color: #570573 !important;
			}
			.symbol{
				position:absolute;
				bottom:60px;
				color:white;
			}
			div.content{
				margin-left: 200px;
				padding-left: 150px;
			}
			@media screen and (max-width: 992px){
				.nav{
					width: 100%;
					height: auto;
					position: relative;
				}
				.nav a {float: left;}
				div.content {
					margin-left: 0;
					padding-left: 16px;
				}
				.filler{
					display: collapse;
				}
				.nav-item{
					width: 100px;
				}
			}
			.filler{
			}
			.selected{
				background-color:orange;
			}
