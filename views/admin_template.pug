doctype html
html
	head
		style.
			.footer {
				position: fixed;
				left: 0;
				height:60px;
				bottom: 0;
				width: 100%;
				text-align: center;
				box-shadow: 0 50vh 0 50vh #343a40;
			}
			.nav{
				padding-top: 50px;
				margin-bottom: 100px;
				margin: 0;
				padding: 0;
				width: 250px;
				background-color: #f1f1f1;
				position: fixed;
				height: 100%;
				overflow: auto;
				box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
			}
			.nav a{
				display: block;
				color: white;
				padding: 16px;
				text-decoration: none;
			}
			.nav a.active{
				background-color: #4CAF50;
				color: white;
			}
			.nav a:hover:not(.active){
				background-color: #555;
				color: white;
			}
			.sidebar-sticky {
				padding-top:50px;
				margin: 0;
				padding: 0;
				position:fixed;
				/*height is 100% - the footer height*/
				height: 100%;
				box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
				overflow: auto;
			}
			main{
				margin-bottom:100px;
			}
			.nav-link{
				color:white;
			}
			hr{
				background-color:white;
				margin-bottom:0px !important;
				border-bottom:0px !important;
				padding-bottom:0px !important;
			}
			.nav-item{
				padding-right:10px;
				padding-left:10px;
				border-bottom:1px solid black;
			}
			.header{
				text-align:center;
				font-size:25px;
			}
			.fa-spoon{
				margin-left:5px;
				padding-right:10px;
				width:30px;
			}
			i{
				padding-right:15px;
				width:35px;
				color:white;
			}
			.symbol{
				position:absolute;
				bottom:60px;
				color:white;
			}
			div.content{
				margin-left: 200px;
				padding-left: 150px;
			}
			@media screen and (max-width: 992px){
				.nav{
					width: 100%;
					height: auto;
					position: relative;
				}
				.nav a {float: left;}
				div.content {
					margin-left: 0;
					padding-left: 16px;
				}
				.filler{
					display: collapse;
				}
			}
			.filler{
			}
