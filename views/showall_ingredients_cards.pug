extends user_view_template

block content
    style.
        .btn_card{
            /*Defines CSS for butons on the dashboard*/
            width: 93%;
            margin: 0px 10px 10px 10px;
        }

    div(class='container-fluid', class='rounded', style='width: 80%')
        h1 #{title}
        br
        a.btn.btn-default(href='/ingredients/cards')
            i(style='color:black').fa.fa-th-large.fa-2x
        a.btn.btn-default(href='/ingredients/showall')
            i(style='color:black').fa.fa-list.fa-2x
       
        tbody
            tr
                form(method= 'POST', action= '/ingredients/add', class= 'form')
                    .form-row
                        .form-group.col-md-2
                            input.form-control(name='ingredientProperties[1]', type='text', placeholder='Name = Tuna')
                        .form-group.col-md-1
                            input.form-control(name='ingredientProperties[1]', type='text', placeholder='Total = 2')
                        .form-group.col-md-3
                            .dropdown-inline
                            select.form-control(name='ingredientProperties[1]', required)
                                option(value='') Measurement
                                option(value='tsp.') Teaspoon
                                option(value='tbsp.') Tablespoon
                                option(value='fl oz') Fluid Ounce
                                option(value='cup') Cup
                                option(value='quart') Quart
                                option(value='ml') Millilitre
                                option(value='lb') Pound
                                option(value='oz') Dry Ounce
                        .form-group.col-md-3
                            input.form-control(name='ingredientProperties[1]', type='date')
                        input.btn.btn-primary.col-md-2(type='submit', value='Submit', class='form-group')

        .form-row
            //-for each ingredient in data
            //for ingredient,i in data
            for item in results
                //-get recipe image
                - ingredient_image= item.ingredient_image_path
                .form-group.col-md-3
                    div(id=item.ingredient_id, class='card', class='h-100')
                        img.image(class='card-img-top', src=ingredient_image, alt='image', class="h-50")
                        div(class='card-body')
                            h5(class='card-title') #{item.ingredient_name}
                            p(class='card-text') Amount: #{item.ingredient_amount} #{item.ingredient_unit_of_measurement}
                            p(class='card-text') Expires: #{item.ingredient_expiration_date}
                            
                        div(class='card-foot')
                            button.btn_card.btn.btn-danger.delete-ingredient(href='#',data-id=item.ingredient_id,data-ex=item.ingredient_expiration_date, data-unit=item.ingredient_unit_of_measurement, data-qty=item.ingredient_amount)  DELETE
                            