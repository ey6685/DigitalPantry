            hr
            ul.nav.flex-column
                li.nav-item
                    a.nav-link(href='/users/dashboard') Dashboard 
                        i.fa.fa-tachometer
                li.nav-item
                    a.nav-link(href='/recipes/showall') Recipes
                        i.fa.fa-spoon
                li.nav-item
                    a.nav-link(href='/ingredients/showall') Ingredients
                        i.fa.fa-spoon
                li.nav-item
                    a.nav-link(href='#') Manage Users
                        i.fa.fa-user-o
                li.nav-item
                    a.nav-link(href='/') Logout 
                        i.fa.fa-sign-out
