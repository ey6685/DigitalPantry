doctype html
html
    head
        style.
            .footer {
                position: fixed;
                left: 0;
                height:60px;
                bottom: 0;
                width: 100%;
                text-align: center;
                box-shadow: 0 50vh 0 50vh #343a40;
            }
            .sidebar-sticky {
                position:absolute;
                float:left;
                /*height is 100% - the footer height*/
                height: 100%;
                padding-top: 5px;
                padding-right: 10px;
                padding-left:10px;
                box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            }
            main{
                margin-bottom:100px;
            }
            .nav-link{
                color:white;
            }
            i{
                padding-left:5px;
            }
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
