extends layout_template

block content
        != messages('message', locals)
        if errors
                for error in errors
                        div(class='alert alert-danger') #{error.msg}
        //- This div will show the user if they have been registered or display an error
        .col-md-8.offset-md-4
            //- Below will print whatever you have sent from app.js
            h1.mb-3 #{title}
            //- TODO create signin form
            form(method='POST', action='/users/login')
                .col-md-6.mb-3
                    #form-group
                            label Email:
                            input.form-control(name='username', type='text')
                    #form-group
                        label Password:
                        input.form-control(name='password', type='password')
                        br
                        input.btn.btn-primary(type='submit', value='Submit')
                        a(href='/users/register') Don't have an account?

                         