extends user_view_template

block content
	br
	br
	br
	br
	div(class='container-fluid', class='rounded', style='width: 80%')
		h1 #{title}
		br
		tbody
			tr
				form(method= 'POST', action= '/ingredients/add', class= 'form')
					.form-row
						.form-group.col-md-2
							input.form-control(name='ingredientProperties[1]', type='text', placeholder='Name = Tuna', class= 'input-form')
						.form-group.col-md-1
							input.form-control(name='ingredientProperties[1]', type='text', placeholder='Total = 2' class= 'input-form')
						.form-group.col-md-3
							.dropdown-inline
							select.form-control(name='ingredientProperties[1]', required, class= 'selection-drop')
								option(value='') Measurement
								option(value='tsp.') Teaspoon
								option(value='tbsp.') Tablespoon
								option(value='fl oz') Fluid Ounce
								option(value='cup') Cup
								option(value='quart') Quart
								option(value='ml') Milliliter
								option(value='lb') Pound
								option(value='oz') Dry Ounce
						.form-group.col-md-3
							input.form-control(name='ingredientProperties[1]', type='date', class= 'input-form')
					#ingredient-container
					button.btn.btn-secondary(type='button' onclick='addIngredient()', id='add-ingredient', class='form-group') Add Ingredient
					input.btn.btn-primary.col-md-2(type='submit', value='Submit', class='form-group')

		script.

			let i = 2;
				function addIngredient(){
					let template = `
					<div class="form-row">
						<div class="form-group col-md-2">
							<input
								class="form-control"
								name="ingredientProperties[${i}]"
								type="text"
								placeholder="Name = Tuna"
								required="required"
							/>
						</div>
						<div class="form-group col-md-1">
							<input
								class="form-control"
								name="ingredientProperties[${i}]"
								type="text"
								placeholder="Total = 2"
								required="required"
							/>
						</div>
						<div class="dropdown-inline col-md-3">
							<select class="form-control" name="ingredientProperties[${i}]" required="required">
								<option value="">Measurement</option>
								<option value="tsp.">Teaspoon</option>
								<option value="tbsp.">Tablespoon</option>
								<option value="fl oz">Fluid Ounce</option>
								<option value="cup">Cup</option>
								<option value="quart">Quart</option>
								<option value="ml">Millilitre</option>
								<option value="lb">Pound</option>
								<option value="oz">Dry Ounce</option>
							</select>
						</div>
						<div class="form-group col-md-3">
							<input class="form-control" name="ingredientProperties[${i}]" type="date" required="required" />
						</div>
						<div class="form-group col-md-1">
							<button type="button" class="btn btn-danger delete-row" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					</div>`;
					let container = document.getElementById('ingredient-container');
					let element = document.createElement('element');
					element.innerHTML = template;
					container.appendChild(element);
					i++
				}