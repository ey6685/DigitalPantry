extends user_view_template

//- Replaces 'block content' inside layout_template with whatever Renders parameter 'title'

block content
    br
    br
    br
    div(class='container-fluid', class='rounded', style='width: 80%')
        h1 #{title}
        br
        tbody
            tr
                form(method= 'POST', action= '/ingredients/add', class= 'well form-inline')
                        .form-row
                            .form-inline
                                input.form-control(name='ingredient_name', type='text', placeholder='Name = Tuna')
                            .form-inline
                                input.form-control(name='ingredient_total', type='text', placeholder='Total = 2')
                            .form-inline
                                .dropdown-inline
                                select.form-control(name='ingredient_measurement', required)
                                    option(value='') Container Measurement
                                    option(value='tsp.') Teaspoon
                                    option(value='tbsp.') Tablespoon
                                    option(value='fl oz') Fluid Ounce
                                    option(value='cup') Cup
                                    option(value='cup') Cup
                                    option(value='quart') Quart
                                    option(value='ml') Millilitter
                                    option(value='lb') Pound
                                    option(value='oz') Dry Ounce
                            .form-inline
                                input.form-control(name='ingredient_expiration_date', type='date')
                                input.btn.btn-primary.col-md-2(type='submit', value='ADD', class='form-group')