doctype html
html
	head
		style.
			.nav-link{
				color: white;
			}
			.nav-item{
				padding-right: 10px;
				padding-left: 10px;
				border-bottom: 1px solid black;
			}
			.sidebar{
				padding-top: 50px;
				margin: 0;
				padding: 0;
				width: 200px;
				background-color: #f1f1f1;
				position: fixed;
				height: 100%;
				overflow: auto;
				box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
			}
			.sidebar a{
				display: block;
				color: black;
				padding: 16px;
				text-decoration: none;
			}
			.sidebar a.active{
				background-color: #4CAF50;
				color: white;
			}
			.sidebar a:hover:not(.active){
				background-color: #555;
				color: white;
			}
			div.content{
				margin-left: 200px;
				padding-left: 150px;
			}
			@media screen and (max-width: 992px){
				.sidebar{
					width: 100%;
					height: auto;
					position: relative;
				}
				.sidebar a {float: left;}
				div.content{
					margin-left:0;
					padding-left: 16px;
				}
			}
			hr{
				background-color: white;
				margin-bottom: 0px !important;
				margin-bottom: 0px !important;
				padding-bottom: 0px !important;
			}
			i{
				padding-right: 15px;
				width: 35px;
				color: white;
			}
			.symbol{
				position: absolute;
				bottom: 60px;
				color: white;
			}
			


