extends layout_template_for_register

block content
	!= messages('message', locals)
	if errors
		for error in errors
			div(class='alert alert-danger') #{error.msg}
	br
	br
	br
	br
	div.mt-5(class='container-fluid', class='rounded', style='width: 80%')
		.col-md-8.offset-md-4
		div.bg-secondary(class='rounded', class='col-12')
			//- This will print whatever you have sent from app.js
			h6.text-secondary .
			h1.text-center.text-white.mb-3 #{title}
			div.bg-dark.card-container(class='container-fluid', class='rounded', style='width: 100%')
				div(class='row')
				h6.text-dark .
					div.mx-auto(class='col-8')
						form(method='POST', action='/users/register')
							#form-group
								label.text-white Email:
								input.form-control(name='email', type='text', id='email-register')
							br
							#form-group
								label.text-white Password:
								input.form-control(name='password', type='password', id='password-register')
							br
							#form-group
								label.text-white Confirm Password:
								input.form-control(name='confirm_password', type='password', id='password2-register')
								br
								input.btn.btn-primary(type='submit', value='Submit', id='submit-register')
								a(href='/users/Login') Already have an account?
				h4.text-dark .
			h4.text-secondary .